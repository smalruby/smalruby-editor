# 変数:(　)の[▼数学関数]
<% n = "#{category}_math_method" %>
Blockly.Blocks['<%= n %>'] =
  init: ()->
    dropdown = [
      ['絶対値', '%num%.abs'],
      ['切り上げ', '%num%.floor'],
      ['切り下げ', '%num%.ceil'],
      ['平方根', 'Math.sqrt(%num%)'],
      ['sin', 'Math.sin(%num%)'],
      ['cos', 'Math.cos(%num%)'],
      ['tan', 'Math.tan(%num%)'],
      ['asin', 'Math.asin(%num%)'],
      ['acos', 'Math.acos(%num%)'],
      ['atan', 'Math.atan(%num%)'],
      ['log', 'Math.log(%num%)'],
      ['log10', 'Math.log10(%num%)'],
      ['e^', 'Math::E ** %num%'],
      ['10^', '10 ** %num%'],
    ]

    @.setHelpUrl('')
    @.setColour(<%= color %>)
    @.appendValueInput('NUM')
      .setCheck('Number')
    @.appendDummyInput()
      .appendField('の')
      .appendField(new Blockly.FieldDropdown(dropdown), 'METHOD')
    @.setInputsInline(true)
    @.setOutput(true, 'Number')
    @.setTooltip('')

Blockly.Ruby['<%= n %>'] = (block) ->
  order = Blockly.Ruby.ORDER_FUNCTION_CALL
  method = @.getFieldValue('METHOD')
  num = Blockly.Ruby.valueToCode(block, 'NUM', order) || '0'
  [method.replace(/%num%/, num), order]
