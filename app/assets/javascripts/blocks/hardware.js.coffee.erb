  init: ()->
    dropdown = ([String(n), String(n)] for n in [0..9])

    @setHelpUrl('')
    @setColour(<%= color %>)
    @appendDummyInput()
      .appendField('7セグディスプレイに')
      .appendField(new Blockly.FieldDropdown(dropdown), 'NUM')
      .appendField('を表示する')
